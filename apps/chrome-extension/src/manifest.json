{
  "manifest_version": 3,
  "name": "PixelTracer",
  "version": "2.0.0",
  "description": "Privacy-focused real-time monitoring and analysis of web analytics and marketing tracking requests",
  
  "permissions": [
    "tabs",
    "webRequest",
    "sidePanel"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_title": "PixelTracer - Click to open analysis panel"
  },
  
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png", 
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}