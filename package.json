{
  "name": "pixeltracer",
  "version": "3.0.0",
  "description": "Privacy-focused Chrome extension for real-time monitoring and analysis of web analytics and marketing tracking requests",
  "type": "module",
  "private": true,
  "author": {
    "name": "Amit Ray"
  },
  "license": "MIT",
  "homepage": "https://github.com/amitray007/pixeltracer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amitray007/pixeltracer.git"
  },
  "bugs": {
    "url": "https://github.com/amitray007/pixeltracer/issues"
  },
  "keywords": [
    "chrome-extension",
    "privacy",
    "analytics",
    "tracking",
    "web-analytics",
    "facebook-pixel",
    "google-analytics",
    "tiktok-pixel",
    "manifest-v3",
    "typescript",
    "react"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "build:packages": "pnpm --filter='./packages/*' run build",
    "build:apps": "pnpm --filter='./apps/*' run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rimraf dist build coverage && pnpm -r run clean"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.0.0"
  }
}
